<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
                    xmlns:converters="clr-namespace:ScreenStreamer.Wpf.Common.Converters">
    <DataTemplate x:Key="streamPropertyAudioTemplate">
        <DataTemplate.Resources>
            <ResourceDictionary>
                <ResourceDictionary.MergedDictionaries>
                    <ResourceDictionary Source="..\..\Styles\CommonStyles.xaml"/>
                </ResourceDictionary.MergedDictionaries>
            </ResourceDictionary>
            </DataTemplate.Resources>
        <StackPanel Orientation="Horizontal">
            <materialDesign:PackIcon Kind="VolumeMedium" Visibility="{Binding IsComputerSoundEnabled, Converter={converters:BooleanToVisibilityConverter}}"/>
            <materialDesign:PackIcon Kind="MicrophoneOutline" Visibility="{Binding IsMicrophoneEnabled, Converter={converters:BooleanToVisibilityConverter}}"/>
            <TextBlock Text="{Binding Info}" />
        </StackPanel>
    </DataTemplate>
</ResourceDictionary>